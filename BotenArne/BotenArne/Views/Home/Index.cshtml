<!-- Clippy.js -->
<script src="js/clippy.min.js"></script>

<script src="~/js/signalr/dist/browser/signalr.js"></script>


<!-- Init script -->
<script type="text/javascript">

    var clippyAgent;

    clippy.load('Clippy', function(agent) {
        // Do anything with the loaded agent
        agent.show();
        agent.moveTo(0, 0);
        clippyAgent = agent;
    });

    var connection = new signalR.HubConnectionBuilder().withUrl("/arneHub").build();

    connection.on("ReceiveCommand", function (action, message) {
        
        if (action === "speak" && message) {
            clippyAgent.speak(message);
        } else {
            clippyAgent.play(action);
        }

        

    });

    connection.start();


</script>

